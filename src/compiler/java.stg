//[MJ] REVIEW (LOWER PRIORITY) -> array type
typeValue ::= [
   "number"	:"double",
   "string"	:"String",
   "boolean":"boolean",
   ""		:"",
   default	:"double"
]

	
//[MJ] REVIEW 	-> ^
// 				-> <, and <= -> error
//				-> ( ) are needed?
operators ::= [
	"("		:"(",
	")"		:")",
   	"*"		:"*",
   	"/"		:"/",
   	"%"		:"%",
   	"+"		:"+",
   	"-"		:"-",
   	"=="	:"==",
   	"!="	:"!=",
   	"&&"	:"&&",
   	"||"	:"||",
   	"!"		:"!",
   default	:"" //because of assignments of vars already declared
]


//
booleanValue ::= [
	"false":"0",
	"true":"1",
	default:"null"
]


