//[IJ] - DONE
statements(stat, controlflow) ::= <<
<stats(stat)><controlflowstats(controlflow)>
>>

// [MJ] DONE
stats(stat) ::= <<
<if(stat)> <stat:{s | <s>;<\n>}><endif>
>>

//[IJ] - DONE
controlflowstats(controlflow) ::= <<
<if(controlflow)><controlflow; separator="\n"><endif>
>>

